generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // หรือ "postgresql", "mysql", ฯลฯ
  url      = env("DATABASE_URL")
}

model Post {
  id      Int     @id @default(autoincrement())
  title   String
  content String
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}
